<%= render 'shared/content_title', title: 'Login' %>

<%= form_tag '/login' do %>
  <dl>
    <dt><%= label_tag :email %></dt>
    <dd><%= email_field_tag :email %></dd>

    <dt><%= label_tag :password %></dt>
    <dd><%= password_field_tag :password %></dd>
  </dl>

  <%= submit_tag 'Login' %>
<% end %>
